        <baseDirectory>C:\Lab\Swarmops\build</baseDirectory>
        <buildArgs>Site5-Deployment -o Swarmops.Site.dll</buildArgs>
      </exec>


      <!-- Deploy: only on success of all steps above -->

      <exec>
